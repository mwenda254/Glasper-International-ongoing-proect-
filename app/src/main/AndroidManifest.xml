<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.ecommerce">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.Glaspalint.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.Glaspalint.LoginActivity" />
        <activity android:name="com.example.android.Glaspalint.RegisterActivity" />
        <activity android:name="com.example.android.Glaspalint.Admin.AdminAddNewProductActivity" />
        <activity android:name="com.example.android.Glaspalint.Admin.AdminCategoryActivity" />
        <activity
            android:name="com.example.android.Glaspalint.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name="com.example.android.Glaspalint.SettinsActivity"
            android:parentActivityName="com.example.android.Glaspalint.HomeActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name="com.example.android.Glaspalint.ProductDetailsActivity"
            />
        <activity android:name="com.example.android.Glaspalint.CartActivity"
            android:parentActivityName="com.example.android.Glaspalint.HomeActivity"/>
        <activity android:name="com.example.android.Glaspalint.ConfirmFinalOrderActivity"
            android:parentActivityName="com.example.android.Glaspalint.HomeActivity"/>
        <activity android:name="com.example.android.Glaspalint.Admin.AdminNewOrdersActivity"
            android:parentActivityName="com.example.android.Glaspalint.Admin.AdminCategoryActivity"/>
        <activity android:name="com.example.android.Glaspalint.Admin.AdminUserProductsActivity"
            android:parentActivityName="com.example.android.Glaspalint.Admin.AdminCategoryActivity"/>
        <activity android:name="com.example.android.Glaspalint.SearchProductsActivity"
            android:parentActivityName="com.example.android.Glaspalint.HomeActivity"/>
        <activity android:name="com.example.android.Glaspalint.Admin.AdminMaintainProductsActivity"
            android:parentActivityName="com.example.android.Glaspalint.Admin.AdminCategoryActivity"/>
        <activity android:name="com.example.android.Glaspalint.Admin.AdminSelectProductToEditActivity"
            android:parentActivityName="com.example.android.Glaspalint.Admin.AdminCategoryActivity"/>
        <activity android:name="com.example.android.Glaspalint.OTPforResetPasswordActivity" />
        <activity android:name="com.example.android.Glaspalint.ViewHolder.NewPasswordActivity"/>
    </application>

</manifest>